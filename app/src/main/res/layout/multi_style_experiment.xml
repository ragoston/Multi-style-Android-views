<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.agostonr.multistyleapp.custom.MultiStyleTextView
        android:id="@+id/button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nice_cta"
        app:style1="@style/Background_Blue"
        app:style2="@style/CallToAction.Primary"
        app:style3="@style/Button_Layout"
        />

    <com.agostonr.multistyleapp.custom.MultiStyleTextView
        android:id="@+id/button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:text="@string/fair_enough_cta"
        app:style1="@style/Background_Orange"
        app:style2="@style/CallToAction.Secondary"
        app:style3="@style/Button_Layout"
        />

    <com.agostonr.multistyleapp.custom.MultiStyleTextView
        android:id="@+id/button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp"
        android:text="@string/ugly_cta"
        app:style1="@style/Background_Orange"
        app:style2="@style/CallToAction.Secondary"
        app:style3="@style/CallToAction.Ugly"
        />
</LinearLayout>
